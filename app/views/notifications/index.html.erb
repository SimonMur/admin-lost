<%= render 'pages/header' %>
<%=render 'pages/leftbar'%>
<div class="top-dashboard-row">
<div class="container">
<h3 style="font-weight: 900; color: rgba(0,0,0,0.8);">You have <%= current_user.notifications.count%> notifications</h3>
<hr>
    <% @notifications.each do |notification|%>
 <p style="font-weight: 500; font-size: 12px; color: rgba(0,0,0,0.6);"><%= notification.notice_type %></p>
 <p style="font-size: 11px; color: rgba(0,0,0,0.6);"><i class="fa fa-clock-o fa-nav"></i> <%= notification.created_at.strftime('%b %d, %Y')%></p>
 <hr>
  <% end %>
</div>
</div>