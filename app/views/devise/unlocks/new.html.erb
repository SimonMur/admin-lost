<div class="password-reset">
<div class="container">
<div class="password-header">
<h2>Resend unlock instructions</h2>
</div>
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissable" style="color:red; font-size: 12px;">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <%= value %>
    </div>
<% end %>
<div class="password-body">
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
<div class="col-md-6">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true , placeholder: 'Enter your registered email', class: 'form-field'%>
  </div>
<p><%= captcha_tag %> <%= text_field_tag :captcha%></p>
  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: 'btn btn-register'  %>
  </div>
  </div>
<% end %>
<div class="col-md-6" style="padding: 10px;">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>