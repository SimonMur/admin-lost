<div class="password-reset">
<div class="container">
<div class="password-header">
<h2>Forgot your password?</h2>
</div>
<div class="password-body">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
<div class="col-md-6">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Enter your registered email', class: 'form-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-register' %>
  </div>
<% end %>
</div>
<div class="col-md-6">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>