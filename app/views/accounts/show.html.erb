<%= render 'pages/header' %>
<%=render 'pages/leftbar'%>
<div class="container account-section">
<h2>Your Account</h2>
<div class="col-md-3">
<p>
  <strong>Current Balance</strong><br>
  Ksh <%= @account.balance %>
</p>
</div>
<p>
<div class="col-md-3">
  <strong>Last Transaction Status</strong><br>
  <%if @account.meta == true %> Success <%else%> Failed <%end%>
</p>
</div>
<div class="col-md-3">
<p>
  <strong>Type of Last Transaction</strong><br>
  <%= @account.meta_name %>
</p>

</div>
<div class="col-md-3">
<p>
  <strong>Account Options</strong><br>
<li class='btn btn-sm btn-warning'><%= link_to "Refresh" %></li>
<%= button_to 'Withdraw', scrape_path, class: 'btn btn-sm btn-info' %>

</div>
</div>
<div class="container transactions-section" style="background: white; margin-top: 10px; font-size: 14px; overflow-x:auto">
<p id="notice"><%= notice %></p>

<h2>Your account history</h2>

<table>
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Transaction type</th>
      <th>Amount</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.from_id %></td>
        <td><%if transaction.deposit = 1 %>Deposit<%else%> Withdrawal<%end%></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>