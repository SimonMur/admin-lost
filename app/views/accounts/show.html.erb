<%= render 'pages/header' %>
<%=render 'pages/leftbar'%>
<div class="container" style="background: #1ab394;">
<h1>Your Account</h1>
<div class="col-md-4">
<p>
  <strong>Current Balance</strong><br>
  Ksh <%= @account.balance %>
</p>
</div>
<p>
<div class="col-md-4">
  <strong>Last Transaction Status</strong><br>
  <%if @account.meta == true %> Success <%else%> Failed <%end%>
</p>
</div>
<div class="col-md-4">
<p>
  <strong>Type of Last Transaction</strong><br>
  <%= @account.meta_name %>
</p>

</div>
</div>
<div class="container" style="background: white; margin-top: 10px;">
<p id="notice"><%= notice %></p>

<h1>Your account history</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Deposit</th>
      <th>Withdrawal</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.from_id %></td>
        <td><%= transaction.to_id %></td>
        <td><%= transaction.deposit %></td>
        <td><%= transaction.withdrawal %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>