<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Duration</th>
      <th>Support</th>
      <th>Admin panel</th>
      <th>Lost id alerts</th>
      <th>Reported id alerts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.cost %></td>
        <td><%= plan.duration %></td>
        <td><%= plan.support %></td>
        <td><%= plan.admin_panel %></td>
        <td><%= plan.lost_id_alerts %></td>
        <td><%= plan.reported_id_alerts %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

