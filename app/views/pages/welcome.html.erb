<%=render 'pages/leftbar'%>
<div class="top-dashboard-row">
<div class="container">
<div class="col-md-3">
<div class="notifications">
	<h3 class="greet-user">Welcome <%= current_user.first_name %></h3>
	<p>You have X notifications</p>
</div>
</div>
<div class="col-md-6">
<h3 class="greet-user">Your Posts Daily</h3>
<%= area_chart current_user.lostitems.group_by_day(:created_at, format: "%-l %P").count, xtitle: "Time", ytitle: "No of Posts"%>

</div>
<div class="col-md-3">
	<h3 class="greet-user">Documents Types</h3>
	<%= pie_chart current_user.lostitems.group(:type_id).count , {donut: true}%>
</div>
</div>
</div>
<div class="middle-dashboard-row">
<div class="container-fluid">
<div class="col-md-4 mini-col">

<h4>Revenue    <span class="label label-success">Daily(Ksh)</span></h4>
<hr>
<p>Your Estimated Daily Revenue</p>
<%= column_chart current_user.lostitems.group_by_hour_of_day(:created_at, format: "%-l %P").count, width: "400px", height: "150px"%>
<h4>Ksh 4,000</h4><a href="">View price per item</a>
<p>The figure is calculated from the delivered lostitems</p>
</div>
<div class="col-md-4 mini-col">
<h4>Clients comments <span class="label label-warning">0 comments</span></h4>
<hr>
</div>
<div class="col-md-3 mini-col">
<h4>Mini colomns</h4>
</div>
</div>
</div>