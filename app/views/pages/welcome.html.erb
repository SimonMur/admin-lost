<%= render 'pages/header' %>
<%=render 'pages/leftbar'%>
<div class="top-dashboard-row">
<div class="container">
<div class="col-md-3">
<div class="notifications">
	<h3 class="greet-user">Welcome <%= current_user.first_name %></h3>
	<p style="font-weight: 900; color: rgba(0,0,0,0.8);">You have <%= current_user.notifications.count%> notifications</p>
	<% @notifications.each do |notification|%>
 <p style="font-weight: 500;"><%= notification.notice_type %></p>
 <p style="font-size: 11px;"><i class="fa fa-clock-o fa-nav"></i> <%= notification.created_at.strftime('%b %d, %Y')%></p>
 <hr>
  <% end %>
</div>
</div>
<div class="col-md-6">
<h3 class="greet-user">Your Posts Daily</h3>
<%= area_chart current_user.lostitems.group_by_day(:created_at).count, xtitle: "Time", ytitle: "No of Posts", colors: ["#3EF5AC"]%>

</div>
<div class="col-md-3">
	<h3 class="greet-user">Documents Types</h3>
	<%= pie_chart current_user.lostitems.group(:type_id).count , {donut: true}%>
</div>
</div>
</div>
<div class="middle-dashboard-row">
<div class="container-fluid">
<div class="col-md-4 mini-col">

<h4>Revenue    <span class="label label-success">Daily(Ksh)</span></h4>
<hr>
<p>Your Estimated monthly Revenue</p>
<%= column_chart current_user.lostitems.group_by_week(:created_at).count, width: "400px", height: "150px"%>
<h4> Ksh. <%= current_user.lostitems.count * 200 %></h4><a href="">View price per item</a>
<p>The figure is calculated from the delivered lostitems</p>
</div>
<div class="col-md-4 mini-col">
<h4>Clients comments <span class="label label-warning">0 comments</span></h4>
<hr>
</div>
<div class="col-md-3 mini-col">
<h4>Mini colomns</h4>
</div>
</div>
</div>