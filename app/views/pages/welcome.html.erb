<%= render 'pages/header' %>
<%=render 'pages/leftbar'%>
<div class="account-status-bar">
<div class="container">
<div class="col-md-3" style="border-right: 1px solid rgba(0,0,0,0.1);">
<h5>Searched and Delivered items
</h5>
 <p style="text-align: center; font-weight: 900; font-size: 25px; color: rgba(0,0,0,0.6);"><%= current_user.lostitems.count %> </p>
</div>
<div class="col-md-3" style="border-right: 1px solid rgba(0,0,0,0.1);">
<h5>Your Account status <span class="fa fa-certificate" style="color: gold;"></span></h5>
<p style="text-align: center; font-size: 25px; "><%if current_user.status == true %>
 <span class="fa fa-toggle-on" style="color: green;"></span>
<%else%>
<span class="fa fa-toggle-off" style="color: red;""></span>
<%end%></p>
</div>
<div class="col-md-6">
<h5>Usage on your <span class="label label-warning"><%= current_user.plan.name %> plan</span></h5>
<div class="progress bg-success">
  <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="<%=current_user.lostitems.count %>"
  aria-valuemin="0" aria-valuemax="<%=current_user.plan.posts.to_f%>" style="width:<%=@bar %>%; ">
  <%= @bar %>% used
  
  </div>
</div>
</div>
</div>
</div>
<div class="top-dashboard-row">
<div class="container">
<div class="col-md-3">
<div class="notifications">
	<h3 class="greet-user">Hello <%= current_user.first_name %></h3>
	<p style="font-weight: 900; color: rgba(0,0,0,0.8);">You have <%= current_user.notifications.where(read: nil).count%> notifications</p>
	<% @notifications.each do |notification|%>
 <p style="font-weight: 500;"><%if notification.read == true %> <%= link_to notification.notice_type, link_through_path(notification)%> <% else%><p style="font-weight: 900;"><%=link_to notification.notice_type,link_through_path(notification) %></p><%end%></p>
 <p style="font-size: 11px;"><i class="fa fa-clock-o fa-nav"></i> <%= notification.created_at.strftime('%b %d, %Y')%></p>
 <hr>
  <% end %>
</div>
</div>
<div class="col-md-6">
<h3 class="greet-user">Your Posts Daily</h3>
<%= area_chart current_user.lostitems.group_by_day(:created_at).count, xtitle: "Time", ytitle: "No of Posts", colors: ["#3EF5AC"], refresh: 1%>

</div>
<div class="col-md-3">
	<h3 class="greet-user">Documents Types</h3>
	<%= pie_chart current_user.lostitems.group(:type_id).count , {donut: true,colors: ["#3EF5AC","orange", "lightblue", "rgba(0,0,0,0.5)" ]}%>
</div>
</div>
</div>

<div class="middle-dashboard-row">
<div class="container-fluid">
<div class="col-md-4 mini-col">

<h4>Revenue    <span class="label label-success">Daily(Ksh)</span></h4>
<hr>
<p>Your Estimated monthly Revenue</p>
<%= column_chart current_user.lostitems.group_by_week(:created_at).count, width: "400px", height: "150px", stacked: true%>
<h4> Ksh. <%= current_user.lostitems.count * 200 %></h4><a href="">View price per item</a>
<p>The figure is calculated from the delivered lostitems</p>
</div>
<div class="col-md-4 mini-col">
<h4>Clients comments <span class="label label-warning">0 comments</span></h4>
<hr>
</div>
<div class="col-md-3 mini-col">
<h4>Mini colomns</h4>
</div>
</div>
</div>