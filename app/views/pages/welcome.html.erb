<%= render 'pages/header' %>
<%=render 'pages/leftbar'%>
<div class="account-status-bar">
<div class="container">
<div class="col-md-3" style="border-right: 1px solid rgba(0,0,0,0.1);">
<h5>Deliver Searched item
</h5>
 <p style="text-align: center; font-weight: 900; font-size: 25px; color: rgba(0,0,0,0.6);"><%= form_tag lostitems_path, method: :get do |f| %>
 <%= text_field_tag 'term', params[:id_number], placeholder: "Id Number", class: 'from-control' %> 
  <%= submit_tag 'Deliver item', class: 'btn btn-sm btn-info' %>
<%end%>
</div>
<div class="col-md-3" style="border-right: 1px solid rgba(0,0,0,0.1);"> 
<h5>Your Account status <span class="fa fa-certificate" style="color: gold;"></span></h5>
<p style="text-align: center; font-size: 25px; "><%if current_user.status == true %>
 <span class="fa fa-toggle-on" style="color: green;"></span>
<%else%>
<span class="fa fa-toggle-off" style="color: red;""></span>
<%end%></p>
</div>
<div class="col-md-6">

  </div>
</div>
</div>
</div>
</div>
<div class="top-dashboard-row">
<div class="container">
<div class="col-md-2" style="background:#1ab394; min-height: 100%; padding: 10px; color: white; margin-bottom: 0px; text-align: center; font-weight: 900;">
<div class="short-sum">
<p>Posted Items</p>
<h1><%= current_user.lostitems.count %></h1>
<hr>
<p>Total Searches</p>
<h1><%= current_user.histories.count %></h1>
<hr>
<p>Delivered Items</p>
<h1>0</h1>
</div>
</div>
<div class="col-md-5">
<h3 class="greet-user">Your Daily Posts</h3>
<%= area_chart current_user.lostitems.group('DAY(created_at)').count, xtitle: "Time", ytitle: "No of Posts", colors: ["#1ab394"]%>

</div>
<div class="col-md-5">
<h3 class="greet-user">Your Daily Searches</h3>

<%= line_chart current_user.histories.group('DAY(created_at)').count, xtitle: "Day", ytitle: "Searches", colors: ["#1ab394"], curve: false%>
	
</div>
</div>
</div>

<div class="middle-dashboard-row">
<div class="container-fluid">
<div class="col-md-4 mini-col">

<h4>Revenue    <span class="label label-success">Daily(Ksh)</span></h4>
<hr>
<p>Your Estimated monthly Revenue</p>
<%= column_chart current_user.lostitems.group('WEEK(created_at)').count, width: "400px", height: "150px", colors: ["#1ab394"], stacked: true%>
<h4> Ksh. <%= current_user.lostitems.count * 200 %></h4><a href="">View price per item</a>
<p>The figure is calculated from the delivered lostitems</p>
</div>
<div class="col-md-3 mini-col">
<h3 class="greet-user">Documents Types</h3>
	<%= pie_chart current_user.lostitems.group(:type_id).count , {donut: true,colors: ["#1ab394","orange", "lightblue", "rgba(0,0,0,0.5)" ]}%><hr>
</div>
<div class="col-md-4 mini-col">
<h4>Your Operating Location as captured</h4>
<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{current_user.latitude},#{current_user.longitude}&markers=#{current_user.latitude},#{current_user.longitude}&zoom=15&size=400x300&key= AIzaSyABrDa4leIaXDXUGyBz6ApK9hhKmuVrOF8",
              class: 'img-fluid img-rounded'%>
</div>
</div>
</div>